<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="4dp"> <ImageView
    android:id="@+id/imageViewCoverHorizontal"
    android:layout_width="@dimen/horizontal_cover_width"  android:layout_height="@dimen/horizontal_cover_height"
    android:scaleType="centerCrop"
    android:background="@android:color/darker_gray" android:contentDescription="Book Cover"/>

    <TextView
        android:id="@+id/textViewTitleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:maxLines="2" android:ellipsize="end" android:gravity="center_horizontal"
        android:layout_marginTop="4dp"
        tools:text="Ebook Title Example"/>

</LinearLayout>
